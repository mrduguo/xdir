<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="jerseyServlet"  class="org.duguo.xdir.http.jersey.OsgiContextAwareSpringServlet"/>

    <bean class="org.duguo.xdir.rest.jersey.internal.HelloWorldImpl">
        <property name="item">
            <bean class="org.duguo.xdir.rest.jersey.api.model.Item">
                <property name="value" value="Hello World Value"/>
            </bean>
        </property>
    </bean>


</beans>