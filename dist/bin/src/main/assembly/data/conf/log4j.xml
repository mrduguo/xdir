<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c{3} %x - %m%n"/>
        </layout>
    </appender>

    <appender name="xdir" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${xdir.dir.logs}/xdir.log"/>
        <param name="maxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c{3} %x - %m%n"/>
        </layout>
    </appender>

    <logger name="org.duguo">
        <level value="trace"/>
    </logger>
	
    <root>
        <priority value="warn"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="xdir"/>
    </root>

</log4j:configuration>
