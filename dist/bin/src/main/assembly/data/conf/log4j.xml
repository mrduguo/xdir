<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="info" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-1p - %m%n"/>
        </layout>
    </appender>

    <appender name="xdir" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${xdir.dir.logs}/xdir.log"/>
        <param name="maxBackupIndex" value="10"/>
        <param name="Threshold" value="debug"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %c{3} %x - %m%n"/>
        </layout>
    </appender>
    <appender name="info" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${xdir.dir.logs}/info.log"/>
        <param name="maxBackupIndex" value="10"/>
        <param name="Threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c{3} %x - %m%n"/>
        </layout>
    </appender>
    <appender name="debug" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${xdir.dir.logs}/debug.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="Threshold" value="debug"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c{3} %x - %m%n"/>
        </layout>
    </appender>
    
    <logger name="org.springframework" additivity="true">
        <level value="info"/>
        <appender-ref ref="info"/>
    </logger>
    <logger name="org.apache" additivity="true">
        <level value="info"/>
        <appender-ref ref="info"/>
    </logger>
    <logger name="org.duguo" additivity="true">
        <level value="info"/>
        <appender-ref ref="xdir"/>
    </logger>
	
    <root>
        <priority value="info"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="info"/>
        <appender-ref ref="debug"/>
    </root>

</log4j:configuration>
